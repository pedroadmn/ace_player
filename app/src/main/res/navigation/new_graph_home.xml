<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/new_graph_home"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="br.com.pedroadmn.aceplayer.ui.main.HomeFragment"
        android:label="@string/login_action_bar_title"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_exploreFragment"
            app:destination="@id/exploreFragment" />
    </fragment>

    <fragment
        android:id="@+id/exploreFragment"
        android:name="br.com.pedroadmn.aceplayer.ui.main.ExploreFragment"
        android:label="@string/main_action_bar_title"
        tools:layout="@layout/fragment_explore" >
        <action
            android:id="@+id/action_exploreFragment_to_postFragment"
            app:destination="@id/postFragment" />
    </fragment>

    <fragment
        android:id="@+id/postFragment"
        android:name="br.com.pedroadmn.aceplayer.ui.main.PostFragment"
        android:label="@string/main_action_bar_title"
        tools:layout="@layout/fragment_post" >
        <action
            android:id="@+id/action_postFragment_to_subscriptionFragment"
            app:destination="@id/subscriptionFragment" />
    </fragment>

    <fragment
        android:id="@+id/subscriptionFragment"
        android:name="br.com.pedroadmn.aceplayer.ui.main.SubscriptionFragment"
        android:label="@string/main_action_bar_title"
        tools:layout="@layout/fragment_subscription" />

</navigation>
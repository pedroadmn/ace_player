<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/new_graph_home"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="br.com.pedroadmn.aceplayer.ui.main.HomeFragment"
        android:label="@string/home_action_bar_title"
        tools:layout="@layout/fragment_home"/>

    <fragment
        android:id="@+id/exploreFragment"
        android:name="br.com.pedroadmn.aceplayer.ui.main.ExploreFragment"
        android:label="@string/explore_action_bar_title"
        tools:layout="@layout/fragment_explore" />

    <fragment
        android:id="@+id/postFragment"
        android:name="br.com.pedroadmn.aceplayer.ui.main.PostFragment"
        android:label="@string/post_action_bar_title"
        tools:layout="@layout/fragment_post" />

    <fragment
        android:id="@+id/subscriptionFragment"
        android:name="br.com.pedroadmn.aceplayer.ui.main.SubscriptionFragment"
        android:label="@string/subscription_action_bar_title"
        tools:layout="@layout/fragment_subscription" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="br.com.pedroadmn.aceplayer.ui.login.LoginFragment"
        android:label="@string/login_action_bar_title"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
    </fragment>

    <fragment
        android:id="@+id/registrationFragment"
        android:name="br.com.pedroadmn.aceplayer.ui.registration.RegistrationFragment"
        android:label="@string/registration_action_bar_title"
        tools:layout="@layout/fragment_registration"/>
</navigation>